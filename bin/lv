#!/usr/bin/env bash
#
# Author: Davide Galassi <davxy@datawok.net>
# Version: 0.1.0
#
# Logs view utility with fzf search

help() {
  echo "Usage: lv [opts] <logfile>"
  echo ""
  echo "  Options:"
  echo "  -f | --follow"
  echo "  -p | --preview"
  exit
}


for arg in "$@"; do
  case $arg in
    "-h"|"--help")
      help
      ;;
    "-f"|"--follow")
      follow="-f"
      ;;
    "-p"|"--preview")
      preview="y"
      ;;
    -*)
      echo "Unknown option: $arg"
      help
      ;;
    *)
      logfile=$arg
      ;;
  esac
done

if [ ! -f "$logfile" ]; then
  echo "File not found $logfile"
  exit
fi

if [[ $preview == "y" ]]; then
  tail $follow -n +1 $logfile | nl | fzf --no-sort --exact --tac \
    --preview "batcat --style=full --color=always --highlight-line {1} $logfile" \
    --preview-window 'up,+{1}+4/2'
else
  tail $follow -n +1 $logfile | nl | fzf --no-sort --exact --tac 
fi
